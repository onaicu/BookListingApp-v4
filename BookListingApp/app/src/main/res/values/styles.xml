<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditSearchButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Theme for Edit Text and Search Button. -->
        <item name="android:paddingBottom">@dimen/padding_End</item>
        <item name="android:paddingLeft">@dimen/padding_Left</item>
        <item name="android:paddingRight">@dimen/padding_Right</item>
        <item name="android:paddingTop">@dimen/padding_Start</item>
        <item name="android:textSize">@dimen/edit_button_size</item>
    </style>

</resources>
